		{% for a in listdir %}
		<tr class="{% cycle a 'listdir.a' %}">
			{% for b in a %}
		<!-- promenlivata b e argument v operatora IF 
			s kojto izkarvam tablicata i s filter ne e udobno -->
				<td class="{% cycle b 'listdir.a' %}">
					{% if b == "True" %}
						This is DIR
					{% else %}
						{{b}}
					{% endif %}
				</td>
					{% if b == "True" %}
						<td>&nbsp</td><td>&nbsp</td><td>&nbsp</td>
					{% endif %}
			{% endfor %}
		</tr>
                {% endfor %}
	</table>
